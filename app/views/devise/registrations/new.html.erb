<% content_for(:page_title, "Inscription") %>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), class: "flow") do |f| %>
  <p class="panel">Je suis majeur·e et/ou je souhaite inscrire mes enfants</p>
  <%= f.error_notification %>

  <%= f.input :email,
              required: true,
              autofocus: true,
              input_html: { autocomplete: "email" }%>
  <%= f.input :password,
              required: true,
              input_html: { autocomplete: "new-password" } %>
  <%= f.input :password_confirmation,
              required: true,
              input_html: { autocomplete: "new-password" } %>

  <%= f.fields_for :household do |household_form| %>
  aa
    <div class="cluster">
      <div class="flow">
        <%= household_form.label :first_name, "Prénom" %>
        <%= household_form.text_field :first_name %>
      </div>

      <div class="flow">
        <%= household_form.label :last_name, "Nom" %>
        <%= household_form.text_field :last_name %>
      </div>
    </div>

    <div class="flow">
      <%= household_form.label :address, "Adresse" %>
      <%= household_form.text_field :address, "data-action": "address#search focus->address#search click@window->address#hideList", "data-address-target": "address" %>
      <%= render "website/autocomplete" %>
    </div>

    <div class="cluster">
      <div class="flow">
        <%= household_form.label :postcode, "Code postal" %>
        <%= household_form.text_field :postcode, "data-address-target": "postcode", required: true %>
      </div>

      <div class="flow">
        <%= household_form.label :city, "Ville" %>
        <%= household_form.text_field :city, "data-address-target": "city", required: true %>
        <%= render "website/autocomplete" %>
      </div>
    </div>

    <div class="flow">
      <%= household_form.label :phone %>
      <%= household_form.text_field :phone %>
    </div>
  <% end %>

  <%= f.button :submit, "S’inscrire", class: "button" %>

  <%= render "devise/shared/links" %>
<% end %>

