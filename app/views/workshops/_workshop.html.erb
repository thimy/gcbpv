<div id="<%= dom_id workshop %>" class="record">
  <section data-controller="tabs">
    <header>
      <button class="button" data-tabs-target="tab" data-action="tabs#click" data-tabs-panel-value="atelier">Atelier</button>
      <button class="button" data-tabs-target="tab" data-action="tabs#click" data-tabs-panel-value="infos" data-button-type="outline">Informations de l’atelier</button>
    </header>
    <div class="flow" data-tabs-target="panel" id="atelier">
      <% workshop.workshop_slots.active.each do |slot| %>
        <div class="cluster">
          <h3><%= [[[slot.city.name, slot.day_of_week.presence].compact.join(" - "), slot.slot_time.presence].compact.join(" "), slot.teacher_names.presence].compact.join(" avec ") %></h3>
          <%= link_to edit_workshop_workshop_slot_path(slot.id, workshop_id: @workshop.id), class: "button", "data-button-size": "small" do %>
            <%= inline_svg "icons/edit" %>
          <% end %>
        </div>
        <%= render Shared::Table::Component.new do |table| %>
          <% table.with_header do |header| %>
            <% header.with_column(name: "student") do %>Élève<% end %>
            <% header.with_column(name: "phone") do %>Téléphone<% end %>
            <% header.with_column(name: "email") do %>Email<% end %>
            <% header.with_column(name: "comment") do %>Notes<% end %>
          <% end %>
          <% slot.subscriptions.active(@season).each do |subscription| %>
            <% table.with_row(class: "#{subscription.optional? || subscription.optional_workshop?(workshop) ? "optional" : "confirmed"}") do |row| %>
              <% row.with_cell(name: "student", class: "nowrap") do %><%= link_to subscription.student.name, student_url(season: @season, record: subscription.student) %><% end %>
              <% row.with_cell(name: "phone", class: "nowrap") do %><%= subscription.phone %><% end %>
              <% row.with_cell(name: "email", class: "nowrap") do %><%= subscription.email %><% end %>
              <% row.with_cell(name: "comment", class: "nowrap") do %><%= subscription.subbed_workshops.where(workshop_slot: slot).first.comment %><% end %>
            <% end %>
          <% end %>
          <% table.with_row do |row| %>
            <% row.with_cell(name: "full", colspan: 4) do %>
              <button class="button" data-emails-list-value="<%= get_emails(slot.subbed_workshops) %>" data-controller="emails" data-action="emails#copyList">Copier la liste des emails</button>
            <% end %>
          <% end %>
          <% table.with_empty_state_with_header do %>
            <td class="empty-state" colspan="3">
              Pas d’inscription
            </td>
          <% end %>
        <% end %>
      <% end %>
    </div>
    <div data-tabs-target="panel" id="infos">
      <h2>Informations de la discipline</h2>
      <dl>
        <dt>Nom :</dt>
        <dd><%= workshop.name %></dd>
        <dt>Description :</dt>
        <dd><%= simple_format(workshop.description) %></dd>
      </dl>
      <%= link_to "Supprimer cet atelier",
        workshop_path(@workshop),
        class: "button",
        data: {
          "button-variant": "alert",
          turbo_method: :delete,
          turbo_confirm: "Êtes-vous sûr·e de vouloir supprimer cet atelier ?"
        } %>
    </div>
  </section>
</div>
