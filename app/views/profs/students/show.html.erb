<fieldset class="panel">
  <legend><h2><%= @student.name %></h2></legend>
  <dl class="cluster">
    <div>
      <dt>Email :</dt>
      <dd><%= @student.email_or_household_email %></dd>
    </div>
    <div>
      <dt>Téléphone :</dt>
      <dd><%= @student.phone_or_household_phone %></dd>
    </div>
  </dl>
</fieldset>
<div class="panel">
  <% @courses.each do |course| %>
    <%= "#{course.instrument.name} #{course.slot.day_of_week} #{[course.start_time, course.end_time].compact.join("-")}" %>
  <% end %>
</div>
