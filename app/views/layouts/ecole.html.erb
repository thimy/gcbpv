<% content_for(:page_class, "ecole-layout") %>

<% content_for :content do %>
  <%= render Website::Header::Component.new %>
  <main class="wrapper region">
    <div class="page-title">
      <h1><%= content_for(:page_title) %></h1>
      <% if content_for(:page_description).present? %><p><%= content_for(:page_description) %></p><% end %>
    </div>
    <div class="popout sidebar">
      <%= render Website::Ecole::Sidebar::Component.new %>
      <%= yield %>
    </div>
  </main>
  <%= render Website::Footer::Component.new %>
<% end %>
<%= render template: "layouts/application" %>
