<% content_for(:page_class, "home ") %>
<% content_for(:page_title, "Groupement Culturel Breton des Pays de Vilaine".html_safe) %>

<div class="feature feed grid" data-layout="thirds">
  <section class="latest-posts flow">
    <header class="flow">
      <h2><%= inline_svg "icons/newspaper" %>Dernières actualités</h2>
      <%= link_to "↬ Voir tous les articles", website_post_index_path %>
    </header>
    <% if @posts.present? %>
      <div class="flow">
        <%= render Website::PostPreview::Component.with_collection(@posts, tag: "h3") %>
      </div>
    <% end %>
  </section>
  <section class="upcoming-events flow">
    <%= link_to "/bogue/#{Bogue.active.ordered.first.slug}" do %>
      <%= image_tag "bogue/bogue-50.jpg", alt: "50 ans de la Bogue d’Or" %>
    <% end %>
    <br />
    <header class="flow">
      <h2><%= inline_svg "icons/party" %>Événements à venir</h2>
      <%= link_to "↬ Voir tous les événements", website_event_index_path %>
    </header>
    <% if @events.present? %>
      <div class="flow">
        <%= render Website::Card::Event::Component.with_collection(@events, inline: true) %>
      </div>
    <% end %>
  </section>
</div>
