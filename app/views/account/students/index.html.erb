<% content_for(:page_class, "account ") %>
<% content_for(:page_title, "Compte") %>

<section>
  <%= link_to "Créer un nouvel élève", new_account_student_path %>
  <%= render Shared::Table::Component.new do |table| %>
    <% table.with_header do |header| %>
      <% header.with_column(name: "name") do %>Nom<% end %>
      <% header.with_column(name: "options", show_label: false) %>
    <% end %>
    <% @students.each do |student| %>
      <% table.with_row(link_url: student) do |row| %>
        <% row.with_cell(name: "name") do %><%= link_to student.name %><% end %>
        <% row.with_cell(name: "options") do %>
          <%= link_to edit_account_student_path(student) do %>
            Editer cet élève
            <%= inline_svg "icons/chevron-right", { class: "caret" } %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
</section>
