<% content_for(:page_class, "account ") %>
<% content_for(:page_title, "Compte") %>

<section>
  <%= link_to "Créer une nouvelle inscription", new_account_subscription_path %>
  <%= render Shared::Table::Component.new do |table| %>
    <% table.with_header do |header| %>
      <% header.with_column(name: "student") do %>Élève<% end %>
      <% header.with_column(name: "season") do %>Année<% end %>
      <% header.with_column(name: "options", show_label: false) %>
    <% end %>
    <% @subscriptions.each do |subscription| %>
      <% table.with_row(link_url: subscription) do |row| %>
        <% row.with_cell(name: "student") do %><%= subscription.student.name %><% end %>
        <% row.with_cell(name: "season") do %><%= subscription.season.name %><% end %>
        <% row.with_cell(name: "options") do %>
          <%= link_to edit_account_subscription_path(subscription) do %>
            Editer cette inscription
            <%= inline_svg "icons/chevron-right", { class: "caret" } %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
</section>
