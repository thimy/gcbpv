<% content_for(:page_class, "events ") %>
<% content_for(:page_title, "Événements") %>

<section class="popout flex-column gap-6">
  <h2><%= inline_svg "icons/calendar-check" %>Les événements à venir</h2>
  <div class="panel">
    <% if @upcoming_events.present? %>
      <%= render Website::Card::Event::Component.with_collection(@upcoming_events) %>
    <% else %>
      Aucun événement à venir
    <% end %>
  </div>
</section>

<section class="popout flex-column gap-6">
  <h2><%= inline_svg "icons/calendar-off" %>Les événements passés</h2>
  <div class="panel">
    <% if @passed_events.present? %>
      <%= render Website::Card::Event::Component.with_collection(@passed_events) %>
    <% else %>
      Aucun événement passé
    <%end %>
  </div>
</section>
