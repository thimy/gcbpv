<div class="flow" data-controller="address">
  <div class="cluster">
    <div class="flow">
      <label for="payor_first_name">Prénom</label>
      <%= text_field :payor, :first_name, required: true %>
    </div>

    <div class="flow">
      <label for="payor_last_name">Nom de famille</label>
      <%= text_field :payor, :last_name, required: true %>
    </div>
  </div>

  <div class="flow">
    <label for="payor_address">Adresse</label>
    <%= text_field :payor, :address, "data-action": "address#search focus->address#search click@window->address#hideList", "data-address-target": "address" %>
    <%= render "website/autocomplete" %>
  </div>

  <div class="cluster">
    <div class="flow">
      <label for="payor_postcode">Code postal</label>
      <%= text_field :payor, :postcode, "data-address-target": "postcode", required: true %>
    </div>

    <div class="flow">
      <label for="payor_city">Ville</label>
      <%= text_field :payor, :city, "data-address-target": "city", required: true %>
      <%= render "website/autocomplete" %>
    </div>
  </div>

  <div class="cluster">
    <div class="flow">
      <label for="payor_phone">Téléphone</label>
      <%= text_field :payor, :phone %>
    </div>

    <div class="flow">
      <label for="payor_email">Email</label>
      <%= text_field :payor, :email %>
    </div>
  </div>

  <div class="flow">
    <label for="payor_comment">Notes</label>
    <%= text_area :payor, :comment, rows: 2 %>
  </div>
</div>
