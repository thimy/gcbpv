<turbo-frame id="student">
  <%= form_for @student, url: student_path, html: {"data-controller": "address"} do |form| %>
    <div class="cluster">
      Foyer :<%= link_to @subscription.subscription_group&.payor&.name, payor_url(season: @season, record: @subscription.subscription_group.payor) %>
      <div class="flow">
        <label>Année de naissance :</label>
        <%= form.text_field :birth_year, value: @student.birth_year %>
      </div>
      <div class="flow">
        <label>Genre :</label>
        <%= form.select :gender, Student.genders.keys.map {|gender| [gender,gender]} %>
      </div>
    </div>
    <div class="cluster">
      <div class="flow">
        <label>Email :</label>
        <%= form.text_field :email, value: @student.email %>
      </div>
      <div class="flow">
        <label>Téléphone :</label>
        <%= form.text_field :phone, value: @student.phone %>
      </div>
    </div>
    <div class="cluster">
      <div class="flow">
        <label>Adresse :</label>
        <%= form.text_field :address, value: @student.address, class: "double", "data-action": "address#search focus->address#search click@window->address#hideList", "data-address-target": "address" %>
        <%= render "website/autocomplete" %>
      </div>
      <div class="flow">
        <label>Code postal :</label>
        <%= form.text_field :postcode, value: @student.postcode, "data-address-target": "postcode" %>
      </div>
      <div class="flow">
        <label>Ville :</label>
        <%= form.text_field :city, value: @student.city, "data-address-target": "city" %>
      </div>
    </div>
    <div class="flow">
      <label>Commentaires sur l'élève :</label>
      <%= form.text_area :comment, value: @student.comment, rows: 2 %>
    </div>
  <% end %>
</turbo-frame>
