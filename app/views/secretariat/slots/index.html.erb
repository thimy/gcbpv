<div class="content-header">
  <h1>Créneaux</h1>
  <%= link_to "Créer un nouveau créneau", new_slot_path %>
</div>
<p style="color: green"><%= notice %></p>
<%= render Shared::Table::Component.new do |table| %>
  <% table.with_header do |header| %>
    <% header.with_column(name: "teacher") do %>Professeur<% end %>
    <% header.with_column(name: "city") do %>Ville<% end %>
    <% header.with_column(name: "day_of_week") do %>Jour<% end %>
    <% header.with_column(name: "start_time") do %>Heure de début<% end %>
    <% header.with_column(name: "end_time") do %>Heure de fin<% end %>
    <% header.with_column(name: "frequency") do %>Fréquence<% end %>
    <% header.with_column(name: "options", show_label: false) %>
  <% end %>
  <% @slots.each do |slot| %>
    <% table.with_row(link_url: slot) do |row| %>
      <% row.with_cell(name: "teacher") do %><%= link_to slot.teacher %><% end %>
      <% row.with_cell(name: "city") do %><%= slot.city %><% end %>
      <% row.with_cell(name: "day_of_week") do %><%= slot.day_of_week %><% end %>
      <% row.with_cell(name: "start_time") do %><%= slot.start_time %><% end %>
      <% row.with_cell(name: "end_time") do %><%= slot.end_time %><% end %>
      <% row.with_cell(name: "frequency") do %><%= slot.frequency %><% end %>
      <% row.with_cell(name: "options") do %>
        <%= link_to edit_slot_path(slot) do %>
          Editer ce cours
          <%= inline_svg "icons/chevron-right", { class: "caret" } %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
