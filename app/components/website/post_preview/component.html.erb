<post-preview>
  <div class="tag-list">
    <% @post.categories.each do |category| %>
      <%= link_to "", class: "tag" do %>
        <span><%= category.name %></span>
      <% end %>
    <% end %>
  </div>
  <%= link_to post_path(@post), class: "post-title" do %>
    <%= tag.send(@tag) do %>
      <%= @post.title %>
    <% end %>
    <time>Publi√© le <%= @post.publication_datetime %></time>
    <div class="image">
      <%= image_tag @post.image if @post.image.present? %>
    </div>
    <%= stripped_content %>
  <% end %>
</post-preview>
