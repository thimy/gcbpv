<header>
  <% if @banner.present? %>
    <div class="information-banner"><%= simple_format(@banner) %></div>
  <% end %>
  <nav data-controller="menu-toggle">
    <%= link_to "Groupement Culturel Breton des Pays de Vilaine", "/", class: "home-button" %>
    <%= render Shared::MenuButton::Component.new %>
    <div class="links">
      <button data-action="menu-toggle#toggle" data-button-type="naked"><%= inline_svg "icons/arrow", class: "rotate-90" %> Fermer le menu</button>
      <%= link_to "L’association", association_path %>
      <%= link_to "La Bogue d’Or", "/bogue/#{Bogue.active.ordered.first.slug}" %>
      <div class="dropdown">
        <%= link_to "École", ecole_path %>
        <div class="dropdown-menu">
          <%= link_to "Tarifs", pricing_path %>
          <%= link_to "L’enfance", ecole_youth_path %>
          <%= link_to "Les cours", ecole_instruments_path %>
          <%= link_to "Les ateliers", ecole_workshops_path %>
          <%= link_to "Les rendez-vous", ecole_trainings_path %>
          <%= link_to "Les projets", ecole_projects_path %>
          <%= link_to "Les professeurs", ecole_teachers_path %>
          <%= link_to "Participation et financement", ecole_membership_path %>
        </div>
      </div>
      <div class="dropdown">
        <%= link_to "Centre de ressources", archives_path %>
        <div class="dropdown-menu">
          <%= link_to "Les éditions", archives_editions_path %>
        </div>
      </div>
      <%= link_to "Actualités", posts_path %>
      <%= link_to "Événements", events_path %>
      <%= link_to "Contact", contact_path %>
    </div>
  </nav>
</header>
