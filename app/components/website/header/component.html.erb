<% if @banner.present? %>
  <div class="information-banner"><%= simple_format(@banner) %></div>
<% end %>
<header class="main-header">
  <div class="main-header__title wrapper region">
    <div class="feature switcher">
      <h1 class="main-header__logo">
        <%= link_to "/", class: "home-button" do %>
          Groupement Culturel Breton<br>des Pays de Vilaine
        <% end %>
      </h1>
      <p class="main-header__tagline">
        Collecter, sauvegarder, transmettre et valoriser le patrimoine culturel local. <br>
        Promouvoir de nouvelles formes d'expression à partir de ce patrimoine.
      </p>
    </div>
  </div>
  <nav class="main-header__nav feature" data-controller="menu-toggle">
    <ul class="cluster">
      <li><%= link_to "Actualités", website_post_index_path, class: "decorated" %></li>
      <li><%= link_to "Événements", website_event_index_path, class: "decorated" %></li>
      <li><%= link_to "La Bogue d’Or", "/bogue/#{Bogue.active.ordered.first.slug}", class: "decorated" %></li>
      <li><%= link_to "L'école de musique", ecole_path, class: "decorated" %></li>
      <li><%= link_to "Centre ressources", archives_path, class: "decorated" %></li>
      <li><%= link_to "L’association", association_path, class: "decorated" %></li>
      <% if user_signed_in? %>
        <li><%= link_to "Mon espace", account_root_path, class: "decorated" %></li>
        <li><%= button_to "Me déconnecter", destroy_user_session_path, method: :delete, class: "sign_out decorated" %></li>
      <% else %>
        <li><%= link_to "S’inscrire", new_user_registration_path, class: "decorated" %></li>
        <li><%= link_to "Se connecter", new_user_session_path, class: "decorated" %></li>
      <% end %>
    </div>
  </nav>
</header>
