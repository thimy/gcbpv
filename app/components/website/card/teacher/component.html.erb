<%= link_to ecole_teacher_path(@teacher), class: "card", "data-card-type": "image" do %>
  <div class="image">
    <%= image_tag @teacher.photo.present? ? @teacher.photo : "icons/singing.svg" %>
  </div>
  <div class="card-info">
    <h3><%= @teacher.name %></h3>
    <div class="tag-list">
      <% @teacher.instruments.each do |instrument| %>
        <span class="tag" data-tag-color="light-accent">
          <span><%= instrument.name %></span>
        </span>
      <% end %>
      <% @teacher.cities.uniq.each do |city| %>
        <span class="tag" data-tag-color="dark">
          <span><%= city.name %></span>
        </span>
      <% end %>
    </div>
  </div>
<% end %>
